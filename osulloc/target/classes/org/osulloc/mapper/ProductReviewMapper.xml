<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="org.osulloc.mapper.ProductReviewMapper">

	<insert id="write">
  		insert into productreview(writer,title,content)
		value(#{writer},#{title},#{content})
  	</insert>
  	
  	<insert id="insertSelectKey" >
  		<selectKey keyProperty="pno" order="BEFORE" resultType="int">
  			select max(pno)+1 pno from productreview
  		</selectKey>
  		insert into productreview(pno,title,content,writer)
		value(#{pno},#{title},#{content},#{writer})
  	</insert>
  	
